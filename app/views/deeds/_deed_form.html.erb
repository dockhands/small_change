<div class="row d-flex justify-content-center">
  <div class="col-xl-6 col-lg-9 col-md-11">

    <%= simple_form_for(@deed) do |f| %>
        <div class="form-group mx-2">
        <%= f.input :title,  placeholder: "at least 3 characters.." %>
        <%= f.input :body, rows: 10, placeholder: "at least 20 characters..", label: "Deed deets" %>
        <%= f.input :money_required, label: "Money needed" %>  
        <%= f.input :location, label: "Location" %>
        <%= f.input :image_url, label: "Image URL" %>
        <%= f.input :image %>
        <%= f.submit({class: "btn btn-primary"}) %>
        </div>
    <% end %>

    <% if @deed.persisted? %>
          <div class="ml-auto">
            <%= link_to('Delete', deed_path(@deed), method: :delete, class: " m-2 btn btn-info", data: {confirm: "Are you sure?"}) %>
          </div>
    <% end %>
  </div>

</div>