<div class="row d-flex justify-content-center">
  <div class="col-xl-6 col-lg-9 col-md-11">    
      <div class="card m-4 container-fluid p-0 card-shadows">
      
			    <div class="card-header">
      
            <h2 class="mx-2">Deed Deets</h2>
            </div>
 
      <div class="card-body"> 
            <% if @deed.fully_funded? %>
            
            <%= simple_form_for(@deed) do |f| %>
                <div class="form-group mx-2">
                <%= f.input :completed_body, rows: 10, label: "Update details" %>
                <%= f.input :completed_image, label: "Image" %>
                <%= f.submit({class: "btn btn-primary"}) %>
                </div>
            <% end %>


            <%  else  %>

            <%= simple_form_for(@deed) do |f| %>
                <div class="form-group mx-2">
                <%= f.input :title  %>
                <%= f.input :body, rows: 10, label: "Deed details" %>
                <%= f.input :money_required, label: "Money needed" %>  
                <%= f.input :city, label: "City/Town" %>
                <%= f.input :all_tags %>
                <%= f.input :image %>
                <%= f.submit({class: "btn btn-primary"}) %>
                </div>
            <% end %>
              <% if @deed.persisted? %>
                      <div class="ml-auto">
                        <%= link_to('Delete', deed_path(@deed), method: :delete, class: " m-2 btn btn-info", data: {confirm: "Are you sure?"}) %>
                      </div>
                <% end %>


          <%  end %>

          
  </div>

</div>