<div class="row d-flex justify-content-center">
  <div class="col-xl-6 col-lg-9 col-md-11">
  <h1 class="mx-2">Create Deed</h1>


<%= form_for @deed do |f| %>
    <div class="form-group mx-2">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "form-control", required: true %>
    </div>
    <div class="form-group mx-2">
    <%= f.label :body, "Description" %>
    <%= f.text_field :body, class: "form-control" %>
    </div>
    <div class="form-group mx-2">
    <%= f.label :money_required, "Money needed" %>
    <%= f.number_field  :money_required, class: "form-control" %>
    </div>
    <div class="form-group mx-2">
    <%= f.label :location, "Location" %>
    <%= f.text_field :location, class: "form-control" %>
    </div>
    <div class="form-group mx-2">
    <%= f.label :image_url, "Image URL" %>
    <%= f.text_field :image_url, class: "form-control",  require: true %>
    </div>
  
  </div>
  <%= f.submit 'Create', class: "btn btn-primary mx-2" %>
<% end %>
</div>
</div>